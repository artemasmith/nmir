<div class="navbar navbar-default">
  <div class="container-fluid">

    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>

      <p class="pull-left">
        <a href="/" class="navbar-brand">
          <i class="fa fa-database fa-lg"></i> multilisting.su
        </a>
      </p>
    </div>

    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav navbar-right" style="padding-left: 15px">
        <p class="nav navbar-text">
          <i class="fa fa-key"></i> 
          <%= link_to 'Регистрация', new_user_registration_path, class: 'navbar-link' %>
        </p>

        <li class="dropdown nav">
          <button class="btn navbar-btn btn-default" data-toggle="modal" data-target=".bs-example-modal-sm">
            <i class="fa fa-sign-in"></i> Войти
          </button>

          <div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-sm">
              <div class="modal-content" style="padding: 25px; min-width: 320px;">

                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  
                  <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'mail@example.com', required: true %>

                  <%= f.password_field :password, autocomplete: "off", class: 'form-control', required: true, placeholder: "********" %>

                  <%= f.label :remember_me, class: 'checkbox' do %>
                    <%= f.check_box :remember_me, checked: true %> запомнить меня
                  <% end %>

                  <%= f.button class: 'btn btn-primary' do %>
                    <i class="fa fa-sign-in"></i> Войти
                  <% end %>
                <% end %>

                  <span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a href="#"><small><i class="fa fa-refresh"></i>&nbsp;cбросить пароль</small></a></span> 
                </form><br>
                <p><b>зайти с помощью:</b></p>
                <script src="//ulogin.ru/js/ulogin.js"></script>
                <div id="uLogin" data-ulogin="display=small;fields=first_name,last_name;providers=vkontakte,odnoklassniki,mailru,google,yandex,twitter,facebook;hidden=other;redirect_uri=http%3A%2F%2F"></div>
              </div>
            </div>
          </div>
        </li>
      </ul>

      <ul class="nav navbar-nav navbar-left">
        <li>
          <a href="#"><i class="fa fa-plus fa-lg"></i> Добавить</a>
        </li>
        <li>
          <a href="#"><i class="fa fa-book fa-lg"></i> Блокнот</a>
        </li>
      </ul>
    </div>
  </div>
</div>
