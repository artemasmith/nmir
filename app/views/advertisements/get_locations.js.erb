var el = $('.GetChildren[lid="' + <%= j params[:parent_id] %> + '"]');
el.popover({
    content: '<%= j render('advertisements/popover_select_location') %>',
    html: true,
    placement: 'bottom'
}).popover("show");

el.find('input[type="text"]').focus();
$('.popover:first').css('width', $('.popover').width());
if (el.closest('.location-group').attr('editable') === 'true') {
    $('.search-or-create-location-container-action').removeClass('hidden')
}
