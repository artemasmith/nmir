$('.abuse_popover_action').popover('hide');
$('.abuse_popover_action').addClass('disabled');
<% if @errors.blank? %>
    $('.notifications').notify({
        message: { text: 'Жалоба отправлена' }
    }).show();
<% else %>
    $('.notifications').notify({
        message: { text: '<%= j @errors %>' }
    }).show();
<% end %>
